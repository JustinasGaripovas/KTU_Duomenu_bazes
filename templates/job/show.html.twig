{% extends 'base.html.twig' %}
{% trans_default_domain 'translation' %}

{% block title %}{% trans %}Job{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Job{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}JobId{% endtrans %}</th>
                <td>{{ job.JobId }}</td>
            </tr>
            <tr>
                <th> {% trans %}JobName{% endtrans %}</th>
                <td>{{ job.JobName }}</td>
            </tr>
            <tr>
                <th> {% trans %}JobQuantity{% endtrans %}</th>
                <td>{{ job.JobQuantity }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info btn-block btn-lg" href="{{ path('job_index') }}">{% trans %}back to list{% endtrans %}</a>

    {% if is_granted('EDIT', job) %}
        <a class="btn btn-success btn-lg" href="{{ path('job_edit', {'id': job.id}) }}">{% trans %}edit{% endtrans %}</a>
    {% endif %}

    {% if is_granted('DELETE', job) %}
        {{ include('job/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}