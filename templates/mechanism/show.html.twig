{% extends 'base.html.twig' %}
{% trans_default_domain 'translation' %}

{% block title %}{% trans %}Mechanism{% endtrans %}{% endblock %}

{% block body %}

    <h1>{% trans %}Mechanism{% endtrans %}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{% trans %}Id{% endtrans %}</th>
            <td>{{ mechanism.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}Type{% endtrans %}</th>
            <td>{{ mechanism.Type }}</td>
        </tr>
        <tr>
            <th>{% trans %}Mechanism number{% endtrans %}</th>
            <td>{{ mechanism.Number }}</td>
        </tr>
        <tr>
            <th>{% trans %}Subunit{% endtrans %}</th>
            <td>{{ mechanism.Subunit }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('mechanism_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a class="btn btn-success btn-lg" href="{{ path('mechanism_edit', {'id': mechanism.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('mechanism/_delete_form.html.twig') }}
{% endblock %}