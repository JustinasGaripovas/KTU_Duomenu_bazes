{% extends 'base.html.twig' %}

{% block title %}Tarnybos sąrašas{% endblock %}

{% block body %}
    <h1 align="center" class="py-3 m-0">Tarnybos sąrašas</h1>

    <div class="pt-2 mb-2">
        <a href="{{ path('subunit_new') }}" class="btn btn-block btn-success">Naujas įrašas</a>
    </div>

    <table class="table table-hover mb-2 table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Pavadinimas</th>
                <th>Adresas</th>
                <th>Telefonas</th>
                <th>Paštas</th>
                <th colspan="2">Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for subunit in subunits %}
            <tr>
                <td>{{ subunit.id }}</td>
                <td>{{ subunit.Name }}</td>
                <td>{{ subunit.Address }}</td>
                <td>{{ subunit.Phone }}</td>
                <td>{{ subunit.Email }}</td>
                <td>
                    {{ include('subunit/_delete_form.html.twig') }}
                </td>
                <td>
                    <a class="btn btn-success btn-block" href="{{ path('subunit_edit', {'id': subunit.id}) }}">Redaguoti</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Nerasta rezultatų</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
