{% extends 'base.html.twig' %}


{% block title %}Kelio ruožų sąrašas{% endblock %}

{% block body %}
    <h1 align="center" class="py-3 m-0">Kelio ruožų sąrašas</h1>

    <div class="pt-2 mb-2">
        <a href="{{ path('road_section_new') }}" class="btn btn-block btn-success">Naujas įrašas</a>
    </div>

    <table class="table table-hover mb-2 table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Pavadinimas</th>
                <th>Pradžia</th>
                <th>Pabaiga</th>
                <th>Plotis</th>
                <th>Priežiuros lygis</th>
                <th>Tipas</th>
                <th colspan="2">Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for road_section in road_sections %}
            <tr>
                <td>{{ road_section.id }}</td>
                <td>{{ road_section.Name }}</td>
                <td>{{ road_section.Begin }}</td>
                <td>{{ road_section.End }}</td>
                <td>{{ road_section.AverageWidth }}</td>
                <td>{{ road_section.MaintenanceLevel }}</td>
                <td>{{ road_section.Type }}</td>
                <td>
                    {{ include('road_section/_delete_form.html.twig') }}
                </td>
                <td>
                    <a class="btn btn-success btn-block" href="{{ path('road_section_edit', {'id': road_section.id}) }}">Redaguoti</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Nerasta rezultatų</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
