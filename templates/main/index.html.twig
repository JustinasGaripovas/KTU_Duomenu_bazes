{% extends 'base.html.twig' %}
{% trans_default_domain 'translation' %}

{% block title %} Darbų apskaitos informacinė sistema!{% endblock %}

{% block body %}

    <div class="container">
        <ul>
            {% if (is_granted('ADMIN')) %}
                <h1>Admin dashboard</h1>
                <div class="card border-danger mb-3">
                    <div class="container p-3">
                        <h2>{% trans %}Ldap users{% endtrans %}</h2>
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('ldap_user_index') }}">{% trans %}LdapUsers list{% endtrans %}</a>
                        <h2>{% trans %}Mechanism{% endtrans %}</h2>
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('mechanism_index') }}">{% trans %}Mechanism{% endtrans %}</a>
                        <h2>{% trans %}Road Sections{% endtrans %}</h2>
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('road_section_index') }}">{% trans %}Road Sections{% endtrans %}</a>
                        <h2>{% trans %} Jobs {% endtrans %}</h2>
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('job_index') }}">{% trans %} Jobs {% endtrans %}</a>
                        <h2>{% trans %} Contract Jobs {% endtrans %}</h2>
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('contract_jobs') }}">{% trans %} Contract Jobs {% endtrans %}</a>
                    </div>
                </div>
            {% endif %}

            {% if is_granted('INSPECTION') %}
                <h1>{% trans %}Inspection {% endtrans %}</h1>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('inspection_new') }}">{% trans %}New Inspection {% endtrans %}</a>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('inspection_index') }}">{% trans %} Inspections List {% endtrans %}</a>
            {% endif %}

            {% if is_granted('DONE_JOBS') %}
                <h1>{% trans %}Jobs{% endtrans %}</h1>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('done_jobs_new') }}">{% trans %}New Job {% endtrans %}</a>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('done_jobs_index') }}">{% trans %}Jobs list{% endtrans %}</a>
            {% endif %}

            {% if is_granted('RESTRICTIONS') %}
                <h1>{% trans %} Restrictions {% endtrans %}</h1>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('restriction_index') }}">{% trans %}New Job {% endtrans %}</a>
            {% endif %}

            {% if is_granted('FLOOD') %}
                <h1>{% trans %} Flooded roads {% endtrans %}</h1>
                <a class="btn btn-warning btn-lg btn-block" href="{{ path('flooded_roads_index') }}">{% trans %} Flooded Roads List {% endtrans %}</a>
            {% endif %}

            {% if is_granted('WINTER') %}
                <h1>{% trans %} Winter Maintenance {% endtrans %}</h1>
                <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_maintenance_new') }}">{% trans %} Winter Maintenance New {% endtrans %}</a>
                <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_maintenance_index') }}">{% trans %} Winter Maintenance List {% endtrans %}</a>
                <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_jobs_new') }}">{% trans %} Winter Jobs New {% endtrans %}</a>
                <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_jobs_index') }}">{% trans %} Winter Jobs List {% endtrans %}</a>
            {% endif %}


            {% if is_granted('INSURED') %}
                <h1>{% trans %}Insured Events{% endtrans %}</h1>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('insured_event_index') }}">{% trans %}Insured Events Index{% endtrans %}</a>
                <h1>{% trans %}Uninsured Events{% endtrans %}</h1>
                <a class="btn btn-success btn-lg btn-block" href="{{ path('uninsured_event_index') }}">{% trans %}Uninsured Events Index{% endtrans %}</a>
            {% endif %}

            {% if is_granted('REPORTS') %}
            <h1>{% trans %}Reports{% endtrans %}</h1>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('reports') }}">{% trans %}Done Jobs report{% endtrans %}</a>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('inspection_reports') }}">{% trans %} Inspection report{% endtrans %}</a>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('insured_events_report') }}">{% trans %} Insured Events {% endtrans %}</a>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('report_done_jobs_by road_level') }}">{% trans %} Sum report {% endtrans %}</a>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('reports_restrictions') }}">{% trans %} Restriction {% endtrans %}</a>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('reports_filter') }}">{% trans %} Report with filter {% endtrans %}</a>
            <a class="btn btn-success btn-lg btn-block" href="{{ path('reports_filter_inspection') }}">{% trans %} Bendra patrulinių {% endtrans %}</a>
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_report_jobs') }}">{% trans %} Žiemos darbų ataskaita {% endtrans %}</a>
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('wintermaintenance_LAKD') }}">{% trans %} Žiemos ataskaita LAKD {% endtrans %}</a>
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_report_materials') }}">{% trans %} Žiemos medžiagų ataskaita{% endtrans %}</a>
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_report_materials_region') }}">{% trans %} Žiemos medžiagų ataskaita regioninė{% endtrans %}</a>
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('winter_report_mechanism') }}">{% trans %} Žiemos mechanizmų ataskaita {% endtrans %}</a>
            <a class="btn btn-warning btn-lg btn-block" href="{{ path('flooded_roads_reports') }}">{% trans %} Flooded Roads report {% endtrans %}</a>
            {% endif %}

        </ul>
    </div>
{% endblock %}
