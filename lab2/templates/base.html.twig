                    </button>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('job_index') }}">Darbai</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('materials_index') }}">Medžiagos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('mechanism_index') }}">Mechanizmai</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('person_index') }}">Personalas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('road_section_index') }}">Kelio ruožai</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('subunit_index') }}">Tarnybos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('warehouse_index') }}">Sandeliai</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('winter_job_index') }}">Žiemos darbai</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">About</a>
                            </li>
                        </ul>

                    </div>
                    </nav>
                {% endblock %}
                <div class="px-2">
                    {% block body %}{% endblock %}
                    <hr>
                    <p style="text-align: center" class="text-muted">Autorius: Justinas Garipovas <br> 2019© Kaunas</p>
                </div>
            </div>
        </div>

        {% block javascripts %}{% endblock %}
    </body>
