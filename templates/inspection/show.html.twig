{% extends 'base.html.twig' %}

{% block title %}Inspection{% endblock %}

{% block body %}
    <h1>Inspection</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inspection.id }}</td>
            </tr>
            <tr>
                <th>RoadId</th>
                <td>{{ inspection.RoadId }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ inspection.Note }}</td>
            </tr>
            <tr>
                <th>RepairDate</th>
                <td>{{ inspection.RepairDate ? inspection.RepairDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('EDIT', inspection) %}
        <a class="btn btn-warning btn-block btn-lg" href="{{ path('inspection_edit', {'id': inspection.id}) }}">{% trans %}Edit{% endtrans %}</a>
    {% endif %}

    <a class="btn btn-info btn-block btn-lg" href="{{ path('inspection_index') }}">{% trans %}back to list{% endtrans %}</a>

    {% if is_granted('DELETE', inspection) %}
        {{ include('inspection/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}